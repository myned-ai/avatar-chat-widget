{
    "name": "@myned-ai/avatar-chat-widget",
    "version": "0.6.0",
    "type": "module",
    "description": "Real-time voice/text chat widget with 3D avatar animation",
    "author": "Myned AI",
    "license": "MIT",
    "homepage": "https://www.myned.ai",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/myned-ai/avatar-chat-widget.git"
    },
    "keywords": [
        "avatar",
        "chat-widget",
        "websocket",
        "gaussian-splatting",
        "voice-chat",
        "text-chat",
        "3d-avatar"
    ],
    "main": "dist/avatar-chat-widget.umd.js",
    "module": "dist/avatar-chat-widget.js",
    "types": "dist/avatar-chat-widget.d.ts",
    "jsdelivr": "dist/avatar-chat-widget.umd.js",
    "unpkg": "dist/avatar-chat-widget.umd.js",
    "exports": {
        ".": {
            "import": "./dist/avatar-chat-widget.js",
            "require": "./dist/avatar-chat-widget.umd.js",
            "types": "./dist/avatar-chat-widget.d.ts"
        },
        "./style.css": "./dist/avatar-chat-widget.css"
    },
    "files": [
        "dist",
        "public",
        "README.md",
        "LICENSE"
    ],
    "sideEffects": [
        "*.css"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:lib": "tsc && vite build --config vite.config.lib.ts",
        "build:all": "npm run build && npm run build:lib",
        "preview": "vite preview",
        "test:server": "python tools/test_server.py",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "prepublishOnly": "npm run build:lib",
        "release": "npm run build:lib && npm publish"
    },
    "devDependencies": {
        "@types/three": "^0.182.0",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "@vitejs/plugin-basic-ssl": "^1.2.0",
        "eslint": "^9.39.2",
        "terser": "^5.44.1",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3",
        "vite": "^5.1.6",
        "vite-plugin-dts": "^4.5.4"
    },
    "dependencies": {
        "@myned-ai/gsplat-flame-avatar-renderer": "^1.0.7",
        "jszip": "^3.10.1"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
